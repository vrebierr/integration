div(ng-include='"components/navbar/navbar.html"')
.container
  .row
    .col-sm-12
      h1 Login

    .col-sm-12
      form.form(name='form', ng-submit='login(form)', novalidate='')
        .form-group
          label Login
          input.form-control(type='text', name='username', ng-model='username')
        .form-group
          label Mot de passe
          input.form-control(type='password', name='password', ng-model='password')

        .form-group.has-error
          p.help-block(ng-show='form.email.$error.required && form.password.$error.required && submitted')
            | Please enter your email and password.
          p.help-block {{ errors.other }}

        div
          button.btn.btn-inverse.btn-lg.btn-login(type='submit')
            | Login

  hr
